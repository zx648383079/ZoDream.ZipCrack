<UserControl x:Class="ZoDream.ZipCrack.Controls.FileInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ll="clr-namespace:ZoDream.ZipCrack.Utils"
             xmlns:local="clr-namespace:ZoDream.ZipCrack.Controls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="40" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="FileTb" Text="{Binding ElementName=root,Path=FileName,Mode=TwoWay}"
                 MaxLines="1" PreviewDragOver="FileTb_PreviewDragOver" 
                 PreviewDrop="FileTb_PreviewDrop" TextChanged="FileTb_TextChanged"/>
        <Button x:Name="OpenBtn" Content="{ll:LocalizedLang Select}" Grid.Column="1" 
                Click="OpenBtn_Click"/>
    </Grid>
</UserControl>
